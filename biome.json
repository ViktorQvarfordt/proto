{
	"files": {
		"ignore": ["**/node_modules/**", "**/client/dist/**"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"recommended": false
			},
			"performance": {
				"noDelete": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"style": {
				"useNumberNamespace": "off"
			}
		}
	},

	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"indentStyle": "space",
			"lineWidth": 120
		}
	}
}
